<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_be_intelligent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="3sp"
        app:cardElevation="@dimen/cvMessageActivityElevation">

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dip"
                android:layout_height="74dip"
                app:srcCompat="@drawable/previous_step" />

            <TableLayout
                android:layout_width="278dp"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.example.behnam.exercise.MyCustomComponent.JustifyTexts.TextViewEx
                        android:id="@+id/home_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tvMessageActivityMargin"
                        android:layout_marginRight="@dimen/tvMessageActivityMargin"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="عنوان پیام"
                        android:textColor="@color/tvMessageActivityTitleColor"
                        android:textSize="@dimen/tvMessageActivityTitleTextSize" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.example.behnam.exercise.MyCustomComponent.JustifyTexts.TextViewEx
                        android:id="@+id/home_card_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tvMessageActivityMargin"
                        android:layout_marginRight="@dimen/tvMessageActivityMargin"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="متن پیام در یک خط به صورت پیش نمایش قرار می گیرد " />
                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/home_card_image"
                android:layout_width="46dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/icon_profile_navigationbar" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
